{
  "manifest_version": 3,
  "name": "MKView for GitHub",
  "version": "1.0.0",
  "description": "View GitHub markdown files in a clean, standalone interface using MKView",
  "permissions": ["activeTab"],
  "action": {
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "default_title": "Open in MKView"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "background": {
    "service_worker": "background.js"
  }
}
